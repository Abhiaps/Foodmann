<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/back"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".Your_Food">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="22sp"
        android:textColor="#FFFFFF"
        android:text="CATEGORY"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="CATEGORY NAME:"
            android:textSize="16sp"/>
        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:id="@+id/name"
            android:textSize="16sp"
            android:background="@drawable/shape"
            android:hint="CATEGORY NAME"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="IMAGE LINK:"
            android:textSize="16sp"/>
        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="16sp"
            android:id="@+id/link"
            android:background="@drawable/shape"
            android:hint="IMAGE LINK"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="OWNER:"
            android:textSize="16sp"/>
        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="16sp"
            android:id="@+id/owner"
            android:background="@drawable/shape"
            android:hint="OWNER"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="ADDRESS:"
            android:textSize="16sp"/>
        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="16sp"
            android:id="@+id/addr"
            android:background="@drawable/shape"
            android:hint="ADDRESS"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="LATITUDE:"
            android:textSize="16sp"/>
        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="16sp"
            android:id="@+id/latitude"
            android:background="@drawable/shape"
            android:hint="LATITUDE"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="LONGITUDE:"
            android:textSize="16sp"/>
        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="16sp"
            android:id="@+id/longitude"
            android:background="@drawable/shape"
            android:hint="LONGITUDE"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:text="FOOD"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="NAME:"
            android:textSize="16sp"/>
        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:id="@+id/iname"
            android:textSize="16sp"
            android:background="@drawable/shape"
            android:hint="NAME"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="IMAGE LINK:"
            android:textSize="16sp"/>
        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="16sp"
            android:id="@+id/ilink"
            android:background="@drawable/shape"
            android:hint="IMAGE LINK"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="PRICE:"
            android:textSize="16sp"/>
        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="16sp"
            android:id="@+id/iprice"
            android:background="@drawable/shape"
            android:hint="PRICE"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="DISCOUNT:"
            android:textSize="16sp"/>
        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="16sp"
            android:id="@+id/idiscount"
            android:background="@drawable/shape"
            android:hint="DISCOUNT"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="DESCRIPTION:"
            android:textSize="16sp"/>
        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="16sp"
            android:id="@+id/idescription"
            android:background="@drawable/shape"
            android:hint="DESCRIPTION"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="PLATES NUMBER:"
            android:textSize="16sp"/>
        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="16sp"
            android:id="@+id/number"
            android:background="@drawable/shape"
            android:hint="PLATES NUMBER"/>
    </LinearLayout>
    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape1"
        android:id="@+id/upload"
        android:text="UPLOAD"
        android:textSize="22sp"/>
</LinearLayout>